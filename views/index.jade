extends _layout

// Nav Bar
//====================================================================================================================
block content
  header
    .container-fluid(style="background-color: black; color:#ffffff; height:auto;")
      .row
        .col-xs-6
          h5(style="color:white;")
            | 250 721-6014 | fsae (at) engr.uvic.ca
        .col-xs-6.social-icons-banner(style="padding-right: 18px;")
          a(href='https://www.flickr.com/photos/uvicfsae/albums/')
            img(src='/img/icons/Flickr-color-lg.png')
          a(href='https://www.instagram.com/uvicfsae/')
            img(src='/img/icons/Instagram-color-lg.png')
          a(href='https://twitter.com/uvicfsae')
            img(src='/img/icons/Twitter-color-lg.png')
          a(href='https://www.facebook.com/UVicFSae/')
            img(src='/img/icons/Facebook-color-lg.png')

  .nav-wrapper
    nav.navbar.navbar-default(data-spy="affix" data-offset-top="45" style='margin-bottom:0px;')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href='#' style='margin-bottom:0px;')
            img(src='/img/logo.png' height="55px")
        div
          #myNavbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li.front-page.active
                a(href='/') Home
              li.front-page
                a(href='/aboutteam/') The Team
              li.front-page
                a(href='/aboutcar/') The Car
              li.front-page
                a(href='/aboutcomp/') The Competition
              li.front-page
                a(href='/sponsors/') Sponsorship
              li.front-page
                a(href='/contact/') Contact

  //Carousel
  //====================================================================================================================

  #myCarousel.carousel.slide(data-ride='carousel' data-interval="8000" style='margin-bottom:0px; margin-top:0px; height:50%; padding: 0px -15px;')
    //- Indicators
    ol.carousel-indicators
      li.active(data-target='#myCarousel', data-slide-to='0')
      li(data-target='#myCarousel', data-slide-to='1')
      li(data-target='#myCarousel', data-slide-to='2')
    .carousel-inner(role='listbox')
      .item.uvic-carousel.active
        img.first-slide(src='/img/UV16front1.jpg', alt='First slide', style="object-fit: cover; height: 800px;")

      .item.uvic-carousel
        img.first-slide(src='/img/Speedway_autocross/autoCross3.jpg', alt='First slide', style="object-fit:cover; height: 800px;")

      .item.uvic-carousel
        img.first-slide(src='/img/UV16teamphoto1.jpg', alt='First slide', style="object-fit:cover; height: 800px;")

    a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next

  //Index Text
  //====================================================================================================================
  .container-fluid
    .row
        .col-xs-2
        .col-lg-4
          .row
            .col-lg-12
              a(href='/aboutcomp/').darken
                img.img-responsive(src='/img/Speedway_autocross/autoCross1.jpg', height='400', style="width: 100%; margin: 30px 0 0 0;")
                h3.overtext What We Do
          .row
            .col-lg-12
              a(href='/aboutteam/').darken
                img.img-responsive(src='/img/teamAtWork.jpg', height='400', style="width: 100%; margin: 30px 0 0 0;")
                h3.overtext Our Team
        .col-lg-4

          // Facebook Feed
          .fb-page(data-href='https://www.facebook.com/UVicFSae/', data-tabs='timeline', data-small-header='false',
          data-adapt-container-width='true', data-hide-cover='false', data-show-facepile='true', data-height='835', data-width='500', style="display:block; margin: 30px auto;")
            blockquote.fb-xfbml-parse-ignore(cite='https://www.facebook.com/UVicFSae/')
              a(href='https://www.facebook.com/UVicFSae/') UVic Formula Motorsport

        .col-xs-2


  include _sponsors.jade