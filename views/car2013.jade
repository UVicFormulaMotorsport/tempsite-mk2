extends _layout

block content
  link(rel='stylesheet', href='/css/car.css')
  header
    .container-fluid(style="background-color: black; color:#ffffff; height:auto;")
      .row
        .col-xs-6
          h5(style="color:white;")
            | 250 721-6014 | fsae (at) engr.uvic.ca
        .col-xs-6.social-icons-banner(style="padding-right: 18px;")
          a(href='https://www.flickr.com/photos/uvicfsae/albums/')
            img(src='/img/icons/Flickr-color-lg.png')
          a(href='https://www.instagram.com/uvicfsae/')
            img(src='/img/icons/Instagram-color-lg.png')
          a(href='https://twitter.com/uvicfsae')
            img(src='/img/icons/Twitter-color-lg.png')
          a(href='https://www.facebook.com/UVicFSae/')
            img(src='/img/icons/Facebook-color-lg.png')

  .nav-wrapper
    nav.navbar.navbar-default(data-spy="affix" data-offset-top="45" style='margin-bottom:0px;')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href='#' style='margin-bottom:0px;')
            img(src='/img/logo.png' height="55px")
        div
          #myNavbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li.front-page
                a(href='/') Home
              li.front-page
                a(href='/aboutteam/') The Team

              li.dropdown.front-page.active
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | The Car
                  span
                ul.dropdown-menu
                  li
                    a(href='/aboutcar/') 2016 Car
                  li
                    a(href='/car2015/') 2015 Car
                  li
                    a(href='/car2014/') 2014 Car
                  li
                    a(href='/car2013/') 2013 Car
                  li
                    a(href='/car2012/') 2012 Car

              li.front-page
                a(href='/aboutcomp/') The Competition
              li.front-page
                a(href='/sponsors/') Sponsorship
              li.front-page
                a(href='/contact/') Contact

  // ABOUT THE CARS
  .container-fluid
    .row
      .col-lg-2
      .col-lg-8
        img.img-responsive(src='/img/car2013.jpg' style="object-fit:cover; height:600px; width:100%;")
      .col-lg-2
    .row
      .col-lg-2
      .col-xs-8
        section.widget.thumbnails
          .col-lg-3
            h3(style="font-weight:800;") 2012
            .col-xs-12.past-cars
              a(href='/car2012/')
                img(src='/img/car2012.jpg', alt='UV12')
          .col-lg-3
            h3(style="font-weight:800;") 2014
            .col-xs-12.past-cars
              a(href='/car2014/')
                img(src='/img/car2014.jpg', alt='UV14')
          .col-lg-3
            h3(style="font-weight:800;") 2015
            .col-xs-12.past-cars
              a(href='/car2015/')
                img(src='/img/car2015.jpg', alt='UV15')
          .col-lg-3
            h3(style="font-weight:800;") 2016
            .col-xs-12.past-cars
              a(href='/aboutcar/')
                img(src='/img/Speedway_autocross/autoCross1.jpg', alt='UV16')
      .col-lg-2
  include _sponsors.jade
